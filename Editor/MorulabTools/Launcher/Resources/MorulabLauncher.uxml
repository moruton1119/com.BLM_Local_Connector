<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" editor-extension-mode="True">
    <ui:VisualElement class="app-container">
        <!-- Sidebar -->
        <ui:VisualElement name="Sidebar" class="sidebar">
            <!-- Sidebar Header with Hamburger and Logo -->
            <ui:VisualElement class="sidebar-top-row">
                <ui:Button name="HamburgerBtn" class="hamburger-btn" text="â‰¡" />
                <ui:Label name="BrandLogo" text="MORULAB" class="brand-logo" />
            </ui:VisualElement>
            
            <ui:Label name="SidebarHeader" text="TOOLS" class="sidebar-header" />
            <ui:ScrollView name="ToolList" class="tool-list" />
            
            <ui:VisualElement name="SidebarFooter" class="sidebar-footer">
                <ui:Label text="v1.0.0" class="version-label" />
                <ui:VisualElement class="lang-switcher">
                    <ui:Button name="BtnLangEN" text="EN" class="lang-btn selected" />
                    <ui:Button name="BtnLangJA" text="JA" class="lang-btn" />
                    <ui:Button name="BtnLangKO" text="KO" class="lang-btn" />
                </ui:VisualElement>
            </ui:VisualElement>
        </ui:VisualElement>

        <!-- Main Content -->
        <ui:VisualElement class="main-content">
            <!-- Tool Header (Description, etc) -->
            <ui:VisualElement name="ToolHeader" class="tool-header">
                <ui:Label name="HeaderTitle" text="Welcome" class="header-title" />
                <ui:Label name="HeaderDesc" text="Select a tool from the sidebar to get started." class="header-desc" />
            </ui:VisualElement>

            <!-- Tool Body (Embedded Tool Goes Here) -->
            <ui:VisualElement name="ToolBody" class="tool-body">
                 <!-- Default Welcome State -->
                 <ui:Label text="Select a tool..." class="placeholder-text"/>
            </ui:VisualElement>
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>
